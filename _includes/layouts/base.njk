{% macro navlink(link, title) %}
  <a
    href="{{ link | url }}"
    style="
      text-decoration: none;
      {% if page.url === link %}
        font-weight: bold
      {% endif %}
    "
  >
    {{ title }}
  </a>
{% endmacro %}

